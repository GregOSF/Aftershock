<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 text-center">
			<%= form_for @postquake_todo, url: {action: "create"} do |f| %>
				<%= f.text_field :desc, placeholder: "Add Custome Post-Quake Todo", autofocus: true, class: 'form-control' %>
				<hr>
				<%= f.text_field :event, placeholder: "Add Event", class: 'form-control' %>
				
			  <%= f.submit "Submit", class: 'btn btn-primary center-block' %>
			<% end %>
			
		</div>
	</div>
</div>
